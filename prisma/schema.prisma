generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Lead {
  id        String     @id @default(uuid()) @db.Uuid
  name      String
  phone     String     @unique
  createdAt DateTime   @default(now())
  eventLogs EventLog[]
}

model EventLog {
  id        String   @id @default(uuid()) @db.Uuid
  type      String
  source    String   @default("app")
  payload   Json?
  leadId    String?  @db.Uuid
  lead      Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())

  @@index([type])
  @@index([leadId])
}
